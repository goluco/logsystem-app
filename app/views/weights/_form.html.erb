<%= form_with(model: @weight) do |form| %>
    <div>
	  <%= form.label :name %>
	  <%= form.text_field :name %>
	</div>
	<div>
	  <%= form.label :min %>
	  <%= form.number_field :min %>
	</div>
	<div>
	  <%= form.label :max %>
	  <%= form.number_field :max %>
	</div>
	<div>
	  <%= form.submit 'Enviar' %>
	</div>
<% end %>