<h1>Sistema de Logística de Ecommerce</h1>
<h4><%= I18n.localize(Date.today) %></h4>

<% if admin_signed_in? %>
  <%= render 'admin' %>
<% elsif user_signed_in? %>
  <%= render 'user' %>
<% else %>
  <%= form_with(url: search_orders_path, method: :get) do |f| %>
  <div>
    <%= f.label :code, "Rastreamento de Entrega: insira o código do pedido" %>
    <%= f.text_field :code %>
  </div>
  <div>
    <%= f.submit 'Enviar' %>
  </div>
<% end %>
<% end %>






